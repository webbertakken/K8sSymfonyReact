{% extends '_includes/root.html.twig' %}

{# variable 'page_title' can be used to set the page/application part of the title #}

{% block root_meta %}
  <meta charset="{{ app_language|default('UTF-8') }}" />
  <meta name="viewport" content="{{ app_viewport|default('width=device-width, initial-scale=1, shrink-to-fit=no') }}" />
{% block meta %}{% endblock %}
{% endblock %}

{% block root_styles %}
  <link rel="stylesheet" href="{{ asset('app.css') }}" type="text/css" />
{% block styles %}{% endblock %}
  <link rel="icon" href="{{ asset('static/images/brand/favicon.svg') }}">
{% endblock %}

{% block root_head_scripts %}
  {#- no default head scripts -#}
{% block head_scripts %}
  {#- Application/Page specific head scripts -#}
{% endblock %}
{% endblock %}

{% block root_content %}
  <div id="application" />
{% endblock %}

{% block root_scripts %}
  <script src="{{ asset('manifest.js') }}"></script>
  <script src="{{ asset('app.js') }}"></script>
{% block application %}
  {#- scenes or pages go here -#}
{% endblock %}

  <script async src="https://www.google-analytics.com/analytics.js"></script>
{% block async_scripts %}
  {#- asynchronous scripts go here -#}
{% endblock %}
{% endblock %}
